<Window x:Class="forum_system.view.SubForumSelect"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:forum_system.view"
        mc:Ignorable="d"
        Title="SubForumSelect" Height="500" Width="500">
    <Grid>
        <TextBlock x:Name="header" HorizontalAlignment="Left" Height="37" Margin="111,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238" TextAlignment="Center"><Run FontWeight="Bold" FontSize="18" Text="Select sub-forum"/><LineBreak/><Run/></TextBlock>
        <ComboBox x:Name="sub_forum_options" HorizontalAlignment="Left" Height="60" Margin="78,114,0,0" VerticalAlignment="Top" Width="325" Loaded="subForumLoaded" SelectionChanged="comboBox_SelectionChanged"/>
        <Button x:Name="choose_sub_forum" Content="Choose Sub-forum" HorizontalAlignment="Left" Height="34" Margin="138,236,0,0" VerticalAlignment="Top" Width="225" Click="button_Click"/>

    </Grid>
</Window>
